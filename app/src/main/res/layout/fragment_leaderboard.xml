<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#012340"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR"
        android:id="@+id/your"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cointred"
        android:text="COINTRED"
        app:layout_constraintTop_toBottomOf="@id/your"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="26sp"
        android:textColor="#FF9D2B" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:text="SCORE."
        app:layout_constraintTop_toBottomOf="@id/cointred"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="24sp"
        android:textColor="#FF6B00" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/score"
        android:id="@+id/score_card"
        app:cardCornerRadius="28dp"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FFC000">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="SCORE"
                android:textSize="26sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="24dp"
                android:id="@+id/score_text_in_card"
                android:textStyle="bold"
                android:textColor="#3E3E3E"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/score_text_in_card"
                app:layout_constraintStart_toStartOf="@id/score_text_in_card"
                app:layout_constraintEnd_toEndOf="@id/score_text_in_card"
                android:text="5"
                android:id="@+id/score_point"
                android:textSize="32sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#3E3E3E"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score_card"
        android:id="@+id/leaderboard_text"
        android:text="LEADERBOARD"
        android:layout_margin="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#A2E778"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_text"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/leaderboard_recycler"/>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>