<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#012340"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR"
        android:id="@+id/your"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cointred"
        android:text="COINTRED"
        app:layout_constraintTop_toBottomOf="@id/your"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="26sp"
        android:textColor="#FF9D2B" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:text="SCORE."
        app:layout_constraintTop_toBottomOf="@id/cointred"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="24sp"
        android:textColor="#FF6B00" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/score_card"
        android:src="@drawable/ic_learn"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="8dp"
        app:tint="#3F618C" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/score"
        android:id="@+id/score_card"
        app:cardCornerRadius="28dp"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FFC000">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/hor_bar"
                android:text="SCORE"
                android:textSize="26sp"
                android:layout_marginTop="15dp"

                android:id="@+id/score_text_in_card"
                android:textStyle="bold"
                android:textColor="#3E3E3E"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/score_text_in_card"
                app:layout_constraintStart_toStartOf="@id/score_text_in_card"
                app:layout_constraintEnd_toEndOf="@id/score_text_in_card"
                android:text="5"
                android:id="@+id/score_point"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#3E3E3E"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/score_text_in_card"
                android:text="RANK"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:id="@+id/rank_text"
                android:textStyle="bold"
                android:textColor="#3E3E3E"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/rank_text"
                app:layout_constraintBottom_toBottomOf="@id/rank_text"
                app:layout_constraintStart_toEndOf="@id/rank_text"
                android:text="69"
                android:textSize="24sp"
                android:layout_marginStart="8dp"
                android:id="@+id/rank"
                android:textStyle="bold"
                android:textColor="#CF1F1F"/>
            <ImageView
                android:layout_width="110dp"
                android:layout_height="5dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                android:src="#F47F2B"
                android:id="@+id/ver_bar"
                app:layout_constraintStart_toEndOf="@id/hor_bar"
                app:layout_constraintTop_toBottomOf="@id/rank_text"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/help"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_lightbulb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/hor_bar"
                app:layout_constraintTop_toBottomOf="@id/ver_bar"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck"
                app:tint="#F33030" />

            <ImageView
                android:layout_width="4dp"
                android:layout_height="100dp"
                android:src="#F47F2B"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/rank_text"
                app:layout_constraintStart_toEndOf="@id/score_text_in_card"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:id="@+id/hor_bar"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/help"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Smart as always, Einstein"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="23sp"/>

            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score_card"
        android:id="@+id/leaderboard_text"
        android:text="LEADERBOARD"
        android:layout_margin="13dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#A2E778"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/leaderboard_text"
        app:layout_constraintBottom_toBottomOf="@id/leaderboard_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_award"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        android:focusable="true"
        app:tint="#FFCF00" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_text"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#00FFFFFF"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/leaderboard_recycler"

                />
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>