<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#012340"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_day"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:thumbTint="@color/teal_200"
        android:layout_margin="10dp"
        app:trackTint="#F20544" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swithch_text"
        app:layout_constraintTop_toTopOf="@id/switch_day"
        app:layout_constraintBottom_toBottomOf="@id/switch_day"
        app:layout_constraintEnd_toStartOf="@id/switch_day"
        android:text="WEEKLY"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"/>
    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="64dp"
        android:id="@+id/cash"
        android:backgroundTint="#F20544"
        app:cardCornerRadius="30dp"

        app:layout_constraintBottom_toTopOf="@id/credit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="INR 10,000(-69)"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginStart="15dp"
            android:text="CASH"
            android:textSize="18sp"
            android:textColor="#E229DA29"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="64dp"
        android:id="@+id/credit"
        android:backgroundTint="#8C2656"
        app:cardCornerRadius="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/total"
        app:layout_constraintTop_toBottomOf="@id/cash"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="INR 330,000(+0)"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginStart="15dp"
            android:text="CREDIT"
            android:textSize="18sp"
            android:textColor="#E229DA29"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:id="@+id/total"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="40dp"

        app:layout_constraintBottom_toTopOf="@id/expenses"
        app:layout_constraintTop_toBottomOf="@id/credit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="INR 330,000(+0)"
            android:layout_marginBottom="10dp"
            android:textSize="22sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginStart="25dp"
            android:text="TOTAL"
            android:textSize="24sp"
            android:textColor="#E2404240"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="64dp"
        android:id="@+id/expenses"
        android:backgroundTint="#F20544"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@id/earnings"

        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/total"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="INR -109"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginStart="15dp"
            android:text="EXPENSES"
            android:textSize="18sp"
            android:textColor="#E229DA29"/>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/pie_chart"
        app:layout_constraintStart_toEndOf="@id/expenses"
        app:layout_constraintTop_toTopOf="@id/expenses"
        app:layout_constraintBottom_toBottomOf="@id/expenses"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/expenses"
        android:src="@drawable/ic_launcher_background"
        android:clickable="true"
        android:focusable="true" />
    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="64dp"
        android:id="@+id/earnings"
        android:backgroundTint="#8C2656"
        app:cardCornerRadius="30dp"

        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add"
        app:layout_constraintTop_toBottomOf="@id/expenses"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="INR +40"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginStart="15dp"
            android:text="EARNINGS"
            android:textSize="18sp"
            android:textColor="#E229DA29"/>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/add"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/earnings"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/minus"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/minus"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/add"
        app:layout_constraintTop_toBottomOf="@id/earnings"
        android:clickable="true"
        android:focusable="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>